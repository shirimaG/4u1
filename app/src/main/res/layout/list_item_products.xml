<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_item_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/product_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Male to Female Cable Line Jumper" />

    <TextView
        android:id="@+id/product_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_item_title"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingTop="3dp"
        android:textSize="12sp"
        tools:text="GPRS/GSM A6 Module, Text messages, Development Board for Wireless communication Controller replace SIM 900" />

    <TextView
        android:id="@+id/product_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_item_description"
        android:ellipsize="none"
        android:paddingTop="3dp"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        tools:text="21000.00 TZSH" />

</RelativeLayout>