<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/jumplerImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/imalemale" />

    <TextView
        android:id="@+id/jumperDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jumplerImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:textSize="17dp"
        android:layout_alignStart="@+id/jumplerImage"
        android:layout_alignTop="@+id/jumplerImage"
        android:layout_marginLeft="133dp"
        android:layout_marginStart="133dp"
        android:text="30cm/20cm Mae to Male DuPont Cable Line Jumper Connector Beadboard for Arduino" />

    <TextView
        android:id="@+id/jumperPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/jumplerImage"
        android:layout_alignLeft="@+id/jumperDesc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:layout_alignStart="@+id/jumperDesc"
        android:text="Price:US $1.5/piece" />
</RelativeLayout>